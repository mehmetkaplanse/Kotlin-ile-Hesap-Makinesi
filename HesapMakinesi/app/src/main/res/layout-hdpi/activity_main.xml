<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="209dp"
        android:background="@color/arkaplan"
        android:gravity="end"
        android:paddingTop="100dp"
        android:paddingRight="30dp"
        android:paddingBottom="50dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="45sp">

    </EditText>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="btnSayiTik">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnac"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btnkenarlik"
                android:onClick="btnResetTik"
                android:text="AC"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnartieksi"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btnkenarlik"
                android:text="+/-"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnpercent"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btnkenarlik"
                android:onClick="btnPercentTik"
                android:text="%"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btndivide"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btnkenarlik"
                android:onClick="btnOpTik"
                android:text="/"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btnkenarlik"
                android:onClick="btnSayiTik"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btnkenarlik"
                android:onClick="btnSayiTik"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btnkenarlik"
                android:onClick="btnSayiTik"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnmultiply"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btnkenarlik"
                android:onClick="btnOpTik"
                android:text="X"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btnkenarlik"
                android:onClick="btnSayiTik"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btnkenarlik"
                android:onClick="btnSayiTik"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btnkenarlik"
                android:onClick="btnSayiTik"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnminus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btnkenarlik"
                android:onClick="btnOpTik"
                android:text="-"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btnkenarlik"
                android:onClick="btnSayiTik"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btnkenarlik"
                android:onClick="btnSayiTik"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btnkenarlik"
                android:onClick="btnSayiTik"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnplus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btnkenarlik"
                android:onClick="btnOpTik"
                android:text="+"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn0"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btnkenarlik"
                android:onClick="btnSayiTik"
                android:text="0"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnvirgul"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btnkenarlik"
                android:onClick="btnSayiTik"
                android:text=","
                android:textSize="34sp" />

            <Button
                android:id="@+id/btndot"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/btnkenarlik"
                android:text="."
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnequal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@color/arkaplan"
                android:onClick="btnEqualTik"
                android:text="="
                android:textColor="@color/btn"
                android:textSize="34sp" />
        </TableRow>

    </TableLayout>

</LinearLayout>